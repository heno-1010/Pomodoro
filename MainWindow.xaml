<Window x:Class="Pomodoro.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Pomodoro"
        mc:Ignorable="d"
        Title="ポモドーロタイマー" Height="450" Width="800">
    <Grid Margin="10,10,10,10">
        <TextBlock x:Name="Timer" Text="25:00" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="36"/>
        <Button x:Name="StartButton" Content="スタート" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,100" Width="100" Height="40" Click="StartButton_Click"/>
        
    </Grid>
</Window>
